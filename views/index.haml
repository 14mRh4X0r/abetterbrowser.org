    %meta{ :property => "og:title", :content => "It's time to choose a better browser." }
    %meta{ :property => "og:url", :content => "http://abetterbrowser.org/" }
    %meta{ :property => "og:image", :content => "http://abetterbrowser.s3.amazonaws.com/images/better_browser.jpg" }
    %meta{ :property => "og:site_name", :content => "A Better Browser" }
    %meta{ :property => "og:description", :content => " Every day, around the globe, millions of web pages are horribly disfigured. The cause of this tragedy is Microsoft Internet Explorer. You can help. If you or someone you know is using Internet Explorer, please, save a web page. Choose A Better Browser." }
    
    %meta{ :name => "Description", :content => "A simple landing page with a simple call to action. Please choose a better browser now. It's time we put Internet Explorer in the recycle bin."} 
    %meta{ :name => "Keywords", :content => "IE6, Browser, A Better Browser, Firefox, Chrome, Opera, Safari" }
    
  %body
