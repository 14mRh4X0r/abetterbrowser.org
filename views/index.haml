!!!
%html
  %head
    %title= t.main.title
    %link{ :rel => "stylesheet", :type => "text/css", :href => "css/reset.css" }
    %link{ :rel => "stylesheet", :type => "text/css", :href => "css/screen.css" }
    %link{ :rel => "stylesheet", :type => "text/css", :href => "css/png_fix.css"}
    
    /[if IE 6]
      %link{ :rel => "stylesheet", :type => "text/css", :href => "css/ie6.css"}
      
    %meta{ :property => "og:title", :content => "It's time to choose a better browser." }
    %meta{ :property => "og:url", :content => "http://abetterbrowser.org/" }
    %meta{ :property => "og:image", :content => "http://abetterbrowser.s3.amazonaws.com/images/better_browser.jpg" }
    %meta{ :property => "og:site_name", :content => "A Better Browser" }
    %meta{ :property => "og:description", :content => " Every day, around the globe, millions of web pages are horribly disfigured. The cause of this tragedy is Microsoft Internet Explorer. You can help. If you or someone you know is using Internet Explorer, please, save a web page. Choose A Better Browser." }
    
    %meta{ :name => "Description", :content => "A simple landing page with a simple call to action. Please choose a better browser now. It's time we put Internet Explorer in the recycle bin."} 
    %meta{ :name => "Keywords", :content => "IE6, IE7, IE8, Internet Explorer, Browser, A Better Browser, Firefox, Chrome, Opera, Safari" }
    
    %script{ :type => "text/javascript", :src => "http://use.typekit.com/pvj7jrd.js" }
    :javascript
      try{Typekit.load();}catch(e){}
      
    %script{ :type => "text/javascript", :src => "http://abetterbrowser.s3.amazonaws.com/javascript/supersleight-min.js" }
      
  %body
    .menu
      %ul
        %li= t.menu.languages
        %li
          %a{:href => "/"}= t.menu.english
        %li
          %a{:href => "/es"}= t.menu.spanish
          
    .wrapper
      %h3= t.main.intro
      %h1= t.main.headline
      %h2= t.main.tagline
      
    .browsers
      .wrapper
        %p= t.main.ie6

        %a.chrome.png{ :href => "http://www.google.com/chrome", :target => "_blank" } Google Chrome
        %a.firefox.png{ :href => "http://www.firefox.com", :target => "_blank" } Mozilla Firefox
        %a.safari.png{ :href => "http://www.apple.com/safari/download", :target => "_blank" } Apple Safari
        %a.opera.png{ :href => "http://www.opera.com/download", :target => "_blank" } Opera
    .wrapper
      .meh
        %span.icon.png
        %p= t.main.ie_lover
        
    .wrapper.footer
      %ul
        %li
          %a{ :href => "http://twitter.com/ejc", :target => "_blank"}= t.credits.design
        %li
          %a{ :href => "http://zacparker.com", :target => "_blank"}= t.credits.spanish
        %li
          %a{ :href => "https://github.com/ejc/abetterbrowser.org", :target => "_blank"}= t.credits.site_source
      %p.contribute
        %a{ :href => "http://twitter.com/ejc", :target => "_blank"}= t.credits.contribute + " @ejc"

          
  :javascript
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-22003967-4']);
    _gaq.push(['_trackPageview']);

    (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();